APP_NAME="Lucky Puffin"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost
APP_TIMEZONE=UTC

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Database
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=lucky_puffin
DB_USERNAME=root
DB_PASSWORD=

# Cache / Sessions / Queues — all via Redis
CACHE_STORE=redis
SESSION_DRIVER=redis
QUEUE_CONNECTION=redis

# Redis
REDIS_CLIENT=predis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Broadcasting — Laravel Reverb (WebSocket)
BROADCAST_CONNECTION=reverb

REVERB_APP_ID=lucky-puffin-app
REVERB_APP_KEY=lucky-puffin-key
REVERB_APP_SECRET=lucky-puffin-secret
REVERB_HOST=localhost
REVERB_PORT=8080
REVERB_SCHEME=http

# Vite (expose to frontend)
VITE_REVERB_APP_KEY="${REVERB_APP_KEY}"
VITE_REVERB_HOST="${REVERB_HOST}"
VITE_REVERB_PORT="${REVERB_PORT}"
VITE_REVERB_SCHEME="${REVERB_SCHEME}"

# Game Config
GAME_BETTING_DURATION=20
GAME_DEALING_DURATION=5
GAME_RESULT_DURATION=5
GAME_STARTING_BALANCE=1000

# Future: Firebase push notifications (Module 9)
FIREBASE_SERVER_KEY=
