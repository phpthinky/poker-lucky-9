# ============================================================
# Lucky Puffin — .env for Hostinger Shared Hosting
# ============================================================
# REPLACE every value marked ← with your actual details
# ============================================================

APP_NAME="Lucky Puffin"
APP_ENV=production
APP_DEBUG=false
APP_KEY=base64:REPLACE_WITH_OUTPUT_OF_php_artisan_key_generate

# ← YOUR actual domain (no trailing slash)
APP_URL=https://yourdomain.com

LOG_CHANNEL=stack
LOG_LEVEL=error

# ── Database ──────────────────────────────────────────────────────────────────
# Get these from Hostinger hPanel → Databases → MySQL Databases
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=u123456789_luckypuffin    # ← your DB name
DB_USERNAME=u123456789_user            # ← your DB user
DB_PASSWORD=your_db_password           # ← your DB password

# ── Cache/Session/Queue (file-based — no Redis on shared hosting) ─────────────
CACHE_STORE=file
SESSION_DRIVER=file
QUEUE_CONNECTION=database

# ── Broadcasting: Pusher (NOT Reverb — Reverb needs a persistent process) ─────
# Sign up free at https://pusher.com → Create App → copy keys below
BROADCAST_CONNECTION=pusher

PUSHER_APP_ID=2116393                  # ← from Pusher dashboard
PUSHER_APP_KEY=a5141559a49c28f899a2            # ← from Pusher dashboard
PUSHER_APP_SECRET=ac7061870c9d1112e9bf            # ← from Pusher dashboard
PUSHER_APP_CLUSTER=ap1                 # ← pick closest region:
                                        #   mt1=US, eu=Europe, ap1=Singapore
                                        #   ap2=Mumbai, ap3=Tokyo, sa1=Brazil

# Remove/clear these so app.js stops trying to use Reverb
REVERB_APP_ID=
REVERB_APP_KEY=
REVERB_APP_SECRET=
REVERB_HOST=
REVERB_PORT=
REVERB_SCHEME=

# ── Laravel Mix (baked into JS bundle at npm run prod) ────────────────────────
MIX_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
MIX_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"
